<h3>Register</h3>
<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<p><%= e %></p>
<% end %>
<% end %>
<form action="/users" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p><label>First Name:</label><input type="text" name="user[first_name]"></p>
	<p><label>Last Name:</label><input type="text" name="user[last_name]"></p>
	<p><label>Email:</label><input type="text" name="user[email]"></p>
	<p><label>Password</label><input type="text" name="user[password]"></p>
	<input type="submit" name="submit" value="Register">
</form>

<h3>Login</h3>
<form action="/login" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p><label>Email:</label><input type="text" name="email"></p>
	<p><label>Password:</label><input type="text" name="password"></p>
	<input type="submit" name="submit" value="Login">
</form>